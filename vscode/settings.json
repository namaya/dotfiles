{
    // "C_Cpp.default.compileCommands": "/usr/bin/clang++",
    "C_Cpp.default.cppStandard": "c++20",
    "C_Cpp.inlayHints.autoDeclarationTypes.enabled": true,
    "C_Cpp.inlayHints.parameterNames.enabled": true,
    "C_Cpp.inlayHints.referenceOperator.enabled": true,
    "[cpp]": {
        "editor.formatOnSave": true,
        "editor.tabSize": 2
    },
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "python.analysis.inlayHints.callArgumentNames": true,
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.variableTypes": true,
    "python.analysis.inlayHints.pytestParameters": true,
    "python.condaPath": "/Users/namaya/mambaforge/bin/mamba",
    "[rust]": {
        "editor.formatOnType": true
    },
    "rust-analyzer.check.noDefaultFeatures": null,
    "rust-analyzer.cargo.buildScripts.overrideCommand": null,
    "editor.lineNumbers": "relative",
    "editor.cursorSurroundingLines": 8,
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "terminal.integrated.fontFamily": "MesloLGS NF",
    "vim.leader": "<space>",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<ctrl+e>"],
            "after": ["$"]
        },
        {
            "before": ["<leader>", "p", "v"],
            "commands": [
                "workbench.files.action.focusFilesExplorer"
            ]
        },
        {
            "before": ["<leader>", "g", "i"],
            "commands": [
                "workbench.scm.focus"
            ]
        },
        {
            "before": ["<leader>", "p", "s"],
            "commands": [
                "workbench.view.search"
            ]
        },
        {
            "before": ["<leader>", "t"],
            "commands": [
                "workbench.action.terminal.focus"
            ],
        },
        {
            "before": ["g", "d"],
            "commands": [
                "editor.action.revealDefinition"
            ],
            "when": "editorHasDefinitionProvider && editorTextFocus"
        },
        {
            "before": ["g", "t"],
            "commands": [
                "editor.action.goToTypeDefinition"
            ],
            "when": "editorHasDefinitionProvider && editorTextFocus"
        },
        {
            "before": ["p", "d"],
            "commands": [
                "editor.action.peekDefinition"
            ],
            "when": "editorHasDefinitionProvider && editorTextFocus"
        },
        {
            "before": ["K"],
            "commands": [
                "editor.action.showDefinitionPreviewHover"
            ],
        },
        {
            "before": ["<leader>", "w", "s"],
            "commands": [
                "workbench.action.showAllSymbols"
            ],
        },
        {
            "before": ["<leader>", "v", "s"],
            "commands": [
                "outline.focus"
            ],
        },
        {
            "before": ["g", "f"],
            "commands": [
               "workbench.action.navigateForward" 
            ],
        },
        {
            "before": ["g", "b"],
            "commands": [
               "workbench.action.navigateBack" 
            ],
        },
        {
            "before": ["<leader>", "v", "r", "r"],
            "commands": [
                "references-view.findReferences"
            ],
        },
        {
            "before": ["<leader>", "r", "n"],
            "commands": [
                "editor.action.rename"
            ],
        },
        {
            "before": ["<leader>", "v", "g", "i"],
            "commands": [
                "workbench.view.scm"
            ],
        },
        {
            "before": ["<leader>", "e", "h"],
            "commands": [
                "workbench.action.moveEditorLeftInGroup"
            ],
        },
        {
            "before": ["<leader>", "e", "l"],
            "commands": [
                "workbench.action.moveEditorRightInGroup"
            ],
        },
        {
            "before": ["<leader>", "<leader>"],
            "commands": [
                "workbench.action.quickOpenPreviousRecentlyUsedEditor"
            ],
            "when": "!inQuickOpen"
        },
        {
            "before": ["<leader>", "p"],
            "commands": [
                "workbench.panel.chat.view.copilot.focus"
            ],
        },
        // { "key": "ctrl+tab",              "command": "workbench.action.quickOpenPreviousRecentlyUsedEditorInGroup",
        //                              "when": "!activeEditorGroupEmpty" },
    ],
    "zenMode.fullScreen": false,
    "zenMode.hideLineNumbers": false,
    "zenMode.centerLayout": true,
    "zenMode.hideStatusBar": true,
    "C_Cpp.clang_format_sortIncludes": true,
    "C_Cpp.clang_format_fallbackStyle": "LLVM",
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    },
    "C_Cpp.default.compilerPath": "/usr/bin/clang++",
    "C_Cpp.loggingLevel": "Information",
    "git.confirmSync": false,
    "workbench.sideBar.location": "right",
}