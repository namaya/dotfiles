// Place your key bindings in this file to override the defaults
[
    //
    //    File Explorer Keybindings
    //
    {
        "key": "d",
        "command": "deleteFile",
        "when": "explorerViewletFocus && filesExplorerFocus && !explorerResourceIsRoot && !inputFocus"
    },
    {
        "key": "n",
        "command": "explorer.newFile",
        "when": "explorerViewletFocus && filesExplorerFocus && !inputFocus"
    },
    {
        "key": "f",
        "command": "explorer.newFolder",
        "when": "explorerViewletFocus && filesExplorerFocus && !explorerResourceIsRoot && !inputFocus"
    },
    {
        "key": "escape",
        "command": "workbench.action.closeSidebar",
        "when": "sideBarFocus && sideBarVisible && !inputFocus"
    },
    {
        "key": "escape",
        "command": "workbench.action.closeSidebar",
        "when": "sideBarFocus && workbench.panel.chat.view.copilot.active"
    },
    {
        "key": "escape",
        "command": "workbench.action.togglePanel",
        "when": "panelFocus && panelVisible"
    },
    // {
    //     "key": "escape",
    //     "command": "workbench.action.closeSidebar",
    //     "when": "sideBarFocus && sideBarVisible && inputFocus"
    // },
    //
    //   Navigation Keybindings
    //
    {
        "key": "ctrl+h",
        "command": "workbench.action.focusFirstEditorGroup",
        "when": "sideBarFocus && activeEditorGroupLast"
    },
    {
        "key": "ctrl+h",
        "command": "workbench.action.focusPreviousGroup",
        "when": "editorTextFocus && !activeEditorGroup"
    },
    {
        "key": "ctrl+l",
        "command": "workbench.action.focusSideBar",
        "when": "editorTextFocus && activeEditorGroupLast"
    },
    {
        "key": "ctrl+l",
        "command": "workbench.action.focusNextGroup",
        "when": "editorTextFocus && !activeEditorGroupLast"
    },
    {
        "key": "ctrl+j",
        "command": "workbench.action.focusPanel",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+k",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "panelFocus"
    },
    // {
    //     "key": "ctrl+l",
    //     "command": "workbench.action.next",
    //     "when": "panelFocus"
    // },
    {
        "key": "cmd+shift+l",
        "command": "workbench.action.focusActivityBar",
        "when": "sideBarFocus"
    },
    //
    //
    //
    {
        "key": "ctrl+e",
        "command": "acceptSelectedSuggestion",
        "when": "editorTextFocus && inSnippetMode"
    },
    // { 
    //     "key": "shift+cmd+f",
    //     "command": "workbench.view.search",
    //     "when": "workbench.view.search.active && neverMatch =~ /doesNotMatch/"
    // },
    {
        "key": "shift+k",
        "command": "workbench.action.increaseViewHeight",
        "when": "focusedView == 'outline'"
    },
    {
        "key": "j",
        "command": "editor.action.scrollDownHover",
        "when": "editorHoverFocused"
    },
    {
        "key": "k",
        "command": "editor.action.scrollUpHover",
        "when": "editorHoverFocused"
    },
    {
        "key": "cmd+shift+h",
        "command": "togglePeekWidgetFocus",
        "when": "inReferenceSearchEditor || referenceSearchVisible"
    },
    {
        "key": "cmd+shift+l",
        "command": "togglePeekWidgetFocus",
        "when": "inReferenceSearchEditor || referenceSearchVisible"
    },
    //
    //      SCM View Keybindings
    //
    {
        "key": "a",
        "command": "git.stage",
        "when": "listFocus && sideBarFocus && activeViewlet == 'workbench.view.scm'"
    },
    {
        "key": "u",
        "command": "git.unstage",
        "when": "listFocus && sideBarFocus && activeViewlet == 'workbench.view.scm'"
    },
    {
        "key": "x",
        "command": "git.unstage",
        "when": "listFocus && sideBarFocus && activeViewlet == 'workbench.view.scm'"
    },
    {
        "key": "c",
        "command": "runCommands",
        "args": {
            "commands": [
                "workbench.scm.focus",
                // "list.focusFirst",
                // "inputFocus"
            ],
        },
        "when": "listFocus && sideBarFocus && activeViewlet == 'workbench.view.scm'"
    },
    { // TODO
        "key": "P",
        "command": "git.push",
        "when": "listFocus && sideBarFocus && activeViewlet == 'workbench.view.scm'"
    },
    {
        "key": "shift+enter",
        "command": "git.commitStaged",
        "when": "sideBarFocus && activeViewlet == 'workbench.view.scm' && inputFocus"
    },
    {
        "key": "ctrl+d",
        "command": "cursorPageDown",
        "when": "listFocus && sideBarFocus && activeViewlet == 'workbench.view.scm'"
    },
    {
        "key": "ctrl+u",
        "command": "cursorPageUp",
        "when": "listFocus && sideBarFocus && activeViewlet == 'workbench.view.scm'"
    },
    {
        "key": "escape",
        "command": "runCommands",
        "args": {
            "commands": [
                "workbench.view.scm",
                "list.focusFirst"
            ],
        },
        "when": "sideBarFocus && activeViewlet == 'workbench.view.scm' && inputFocus"
    },
    // {
    //     "key": "a",
    //     "command": "git.stage",
    //     "when": "workbench.scm.active && listFocus"
    // },
    {
        "key": "ctrl+l",
        "command": "list.collapseAll",
        "when": "listFocus && !inputFocus"
    },
    {
        "key": "cmd+shift+g",
        "command": "workbench.view.scm",
        "when": "workbench.scm.active"
    },
    {
        "key": "cmd+shift+t",
        "command": "workbench.action.terminal.focus",
        // "when": "terminalHasBeenCreated"
    },
    {
        "key": "cmd+shift+c",
        "command": "workbench.panel.chat.view.copilot.focus",
    },
    {
        "key": "ctrl+b shift+\\",
        "command": "workbench.action.splitEditor",
        "when": "editorTextFocus"
    },
    {
        "key": "cmd+\\",
        "command": "-workbench.action.splitEditor",
    },
    {
        "key": "ctrl+b -",
        "command": "workbench.action.splitEditorDown",
        "when": "editorTextFocus"
    },
    {
        "key": "cmd+k cmd+\\",
        "command": "-workbench.action.splitEditorDown"
    },
    {
        "key": "shift+cmd+h",
        "command": "-workbench.action.replaceInFiles"
    },
    {
        "key": "ctrl+b shift+\\",
        "command": "workbench.action.terminal.split",
        "when": "terminalFocus && terminalProcessSupported || terminalFocus && terminalWebExtensionContributedProfile"
    },
    {
        "key": "cmd+\\",
        "command": "-workbench.action.terminal.split",
        "when": "terminalFocus && terminalProcessSupported || terminalFocus && terminalWebExtensionContributedProfile"
    },
    {
        "key": "ctrl+s",
        "command": "projectManager.listProjectsNewWindow"
    },
    { 
        "key": "ctrl+l",
        "command": "workbench.action.terminal.focusNextPane",
        "when": "terminalFocus && terminalHasBeenCreated && !terminalEditorFocus || terminalFocus && terminalProcessSupported && !terminalEditorFocus"
    },
    { 
        "key": "ctrl+h",
        "command": "workbench.action.terminal.focusPreviousPane",
        "when": "terminalFocus && terminalHasBeenCreated && !terminalEditorFocus || terminalFocus && terminalProcessSupported && !terminalEditorFocus"
    },
    { "key": "cmd+1",                "command": "workbench.action.openEditorAtIndex1" },
    { "key": "cmd+2",                "command": "workbench.action.openEditorAtIndex2" },
    { "key": "cmd+3",                "command": "workbench.action.openEditorAtIndex3" },
    { "key": "cmd+4",                "command": "workbench.action.openEditorAtIndex4" },
    { "key": "cmd+5",                "command": "workbench.action.openEditorAtIndex5" },
    { "key": "cmd+6",                "command": "workbench.action.openEditorAtIndex6" },
    { "key": "cmd+7",                "command": "workbench.action.openEditorAtIndex7" },
    { "key": "cmd+8",                "command": "workbench.action.openEditorAtIndex8" },
    { "key": "cmd+9",                "command": "workbench.action.openEditorAtIndex9" },
]