// Place your key bindings in this file to override the defaults
[
    //
    //    File Explorer Keybindings
    //
    {
        "key": "d",
        "command": "deleteFile",
        "when": "explorerViewletFocus && filesExplorerFocus && !explorerResourceIsRoot && !inputFocus"
    },
    {
        "key": "n",
        "command": "explorer.newFile",
        "when": "explorerViewletFocus && filesExplorerFocus && !inputFocus"
    },
    {
        "key": "f",
        "command": "explorer.newFolder",
        "when": "explorerViewletFocus && filesExplorerFocus && !explorerResourceIsRoot && !inputFocus"
    },
    //
    //   Navigation Keybindings
    //
    {
        "key": "cmd+shift+h",
        "command": "workbench.action.focusFirstEditorGroup",
        "when": "sideBarFocus && activeEditorGroupLast"
    },
    {
        "key": "cmd+shift+h",
        "command": "workbench.action.focusPreviousGroup",
        "when": "editorTextFocus && !activeEditorGroup"
    },
    {
        "key": "cmd+shift+l",
        "command": "workbench.action.focusSideBar",
        "when": "editorTextFocus && activeEditorGroupLast"
    },
    {
        "key": "cmd+shift+l",
        "command": "workbench.action.focusNextGroup",
        "when": "editorTextFocus && !activeEditorGroupLast"
    },
    {
        "key": "cmd+shift+j",
        "command": "workbench.action.focusPanel",
        "when": "editorTextFocus"
    },
    {
        "key": "cmd+shift+k",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "panelFocus"
    },
    {
        "key": "cmd+shift+l",
        "command": "workbench.action.focusActivityBar",
        "when": "sideBarFocus"
    },
    {
        "key": "cmd+shift+1",
        "command": "runCommands",
        "name": "Focus On First Editor in First Group",
        "args": {
          "commands": [
            "workbench.action.focusActiveEditorGroup",
            "workbench.action.firstEditorInGroup"
          ]
        }
    },
    //
    //
    //
    {
        "key": "ctrl+e",
        "command": "acceptSelectedSuggestion",
        "when": "editorTextFocus && inSnippetMode"
    },
    // { 
    //     "key": "shift+cmd+f",
    //     "command": "workbench.view.search",
    //     "when": "workbench.view.search.active && neverMatch =~ /doesNotMatch/"
    // },
    {
        "key": "shift+k",
        "command": "workbench.action.increaseViewHeight",
        "when": "focusedView == 'outline'"
    },
    {
        "key": "j",
        "command": "editor.action.scrollDownHover",
        "when": "editorHoverFocused"
    },
    {
        "key": "k",
        "command": "editor.action.scrollUpHover",
        "when": "editorHoverFocused"
    },
    {
        "key": "cmd+shift+h",
        "command": "togglePeekWidgetFocus",
        "when": "inReferenceSearchEditor || referenceSearchVisible"
    },
    {
        "key": "cmd+shift+l",
        "command": "togglePeekWidgetFocus",
        "when": "inReferenceSearchEditor || referenceSearchVisible"
    },
    //
    //      SCM View Keybindings
    //
    {
        "key": "a",
        "command": "git.stage",
        "when": "listFocus && sideBarFocus && activeViewlet == 'workbench.view.scm'"
    },
    {
        "key": "u",
        "command": "git.unstage",
        "when": "listFocus && sideBarFocus && activeViewlet == 'workbench.view.scm'"
    },
    {
        "key": "shift+enter",
        "command": "git.commitStaged",
        "when": "sideBarFocus && workbench.scm.active && inputFocus"
    },
    {
        "key": "escape",
        "command": "runCommands",
        "args": {
            "commands": [
                "workbench.view.scm",
                "list.focusFirst"
            ],
        },
        "when": "sideBarFocus && workbench.scm.active && inputFocus"
    },
    // {
    //     "key": "a",
    //     "command": "git.stage",
    //     "when": "workbench.scm.active && listFocus"
    // },
    {
        "key": "ctrl+l",
        "command": "list.collapseAll",
        "when": "listFocus && !inputFocus"
    },
    {
        "key": "cmd+shift+g",
        "command": "workbench.view.scm",
        "when": "workbench.scm.active"
    },
    {
        "key": "cmd+shift+t",
        "command": "workbench.action.terminal.focus",
        // "when": "terminalHasBeenCreated"
    },
    {
        "key": "cmd+shift+c",
        "command": "workbench.panel.chat.view.copilot.focus",
    },
    {
        "key": "ctrl+b shift+\\",
        "command": "workbench.action.splitEditor",
        "when": "editorTextFocus"
    },
    {
        "key": "cmd+\\",
        "command": "-workbench.action.splitEditor",
    },
    {
        "key": "ctrl+b -",
        "command": "workbench.action.splitEditorDown",
        "when": "editorTextFocus"
    },
    {
        "key": "cmd+k cmd+\\",
        "command": "-workbench.action.splitEditorDown"
    },
    {
        "key": "shift+cmd+h",
        "command": "-workbench.action.replaceInFiles"
    },
    {
        "key": "ctrl+b shift+\\",
        "command": "workbench.action.terminal.split",
        "when": "terminalFocus && terminalProcessSupported || terminalFocus && terminalWebExtensionContributedProfile"
    },
    {
        "key": "cmd+\\",
        "command": "-workbench.action.terminal.split",
        "when": "terminalFocus && terminalProcessSupported || terminalFocus && terminalWebExtensionContributedProfile"
    }
]