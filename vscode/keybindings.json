// Place your key bindings in this file to override the defaults
[
    {
        "key": "d",
        "command": "deleteFile",
        "when": "explorerViewletFocus && filesExplorerFocus && !explorerResourceIsRoot && !inputFocus"
    },
    {
        "key": "n",
        "command": "explorer.newFile",
        "when": "explorerViewletFocus && filesExplorerFocus && !explorerResourceIsRoot && !inputFocus"
    },
    {
        "key": "f",
        "command": "explorer.newFolder",
        "when": "explorerViewletFocus && filesExplorerFocus && !explorerResourceIsRoot && !inputFocus"
    },
    {
        "key": "ctrl+e",
        "command": "acceptSelectedSuggestion",
        "when": "suggestWidgetHasFocusedSuggestion && suggestWidgetVisible && textInputFocus"
    },
    // { 
    //     "key": "shift+cmd+f",
    //     "command": "workbench.view.search",
    //     "when": "workbench.view.search.active && neverMatch =~ /doesNotMatch/"
    // },
    // {
    //     "key": "a",
    //     "command": "git.stage",
    //     "when": "workbench.scm.active && listFocus"
    // },
    {
        "key": "ctrl+e",
        "command": "github.copilot.acceptPanelSolution",
        "when": "config.github.copilot.inlineSuggest.enable && editorTextFocus && inlineSuggestionsVisible"
    },
    {
        "key": "cmd+shift+j",
        "command": "workbench.action.focusPanel",
        "when": "editorTextFocus"
    },
    {
        "key": "cmd+shift+k",
        "command": "workbench.action.focusFirstEditorGroup",
        "when": "panelFocus"
    },
    {
        "key": "cmd+shift+h",
        "command": "workbench.action.focusSideBar",
        "when": "editorTextFocus"
    },
    {
        "key": "cmd+shift+l",
        "command": "workbench.action.focusFirstEditorGroup",
        "when": "sideBarFocus"
    },
    {
        "key": "cmd+shift+h",
        "command": "workbench.action.terminal.focusPreviousPane",
        "when": "terminalFocus"
    },
    {
        "key": "cmd+shift+l",
        "command": "workbench.action.terminal.focusNextPane",
        "when": "terminalFocus"
    },
    {
        "key": "cmd+shift+[",
        "command": "workbench.action.previousPanelView",
        "when": "panelFocus"
    },
    {
        "key": "cmd+shift+]",
        "command": "workbench.action.nextPanelView",
        "when": "panelFocus"
    },
    {
        "key": "shift+space",
        "command": "workbench.files.action.collapseExplorerFolders",
        "when": "explorerViewletFocus"
    },
    {
        "key": "cmd+shift+h",
        "command": "workbench.action.focusActivityBar",
        "when": "sideBarFocus"
    },
    // {
    //     "key": "ctrl+e",
    //     "command": "acceptSelectedSuggestion",
    //     "when": "editorTextFocus && inSnippetMode"
    // }
]