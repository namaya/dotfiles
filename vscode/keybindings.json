// Place your key bindings in this file to override the defaults
[
    {
        "key": "d",
        "command": "deleteFile",
        "when": "explorerViewletFocus && filesExplorerFocus && !explorerResourceIsRoot && !inputFocus"
    },
    {
        "key": "n",
        "command": "explorer.newFile",
        "when": "explorerViewletFocus && filesExplorerFocus && !inputFocus"
    },
    {
        "key": "f",
        "command": "explorer.newFolder",
        "when": "explorerViewletFocus && filesExplorerFocus && !explorerResourceIsRoot && !inputFocus"
    },
    {
        "key": "ctrl+e",
        "command": "acceptSelectedSuggestion",
        "when": "editorTextFocus && inSnippetMode"
    },
    // { 
    //     "key": "shift+cmd+f",
    //     "command": "workbench.view.search",
    //     "when": "workbench.view.search.active && neverMatch =~ /doesNotMatch/"
    // },
    // {
    //     "key": "a",
    //     "command": "git.stage",
    //     "when": "workbench.scm.active && listFocus"
    // },
    {
        "key": "shift+enter",
        "command": "git.commitStaged",
        "when": "sideBarFocus && workbench.scm.active && inputFocus"
    },
    {
        "key": "escape",
        "command": "runCommands",
        "args": {
            "commands": [
                "workbench.view.scm",
                "list.focusFirst"
            ],
        },
        "when": "sideBarFocus && workbench.scm.active && inputFocus"
    },
    {
        "key": "cmd+shift+h",
        "command": "workbench.action.focusFirstEditorGroup",
        "when": "sideBarFocus"
    },
    {
        "key": "cmd+shift+l",
        "command": "workbench.action.focusSideBar",
        "when": "editorTextFocus"
    },
    {
        "key": "cmd+shift+j",
        "command": "workbench.action.focusPanel",
        "when": "editorTextFocus"
    },
    {
        "key": "cmd+shift+k",
        "command": "workbench.action.focusFirstEditorGroup",
        "when": "panelFocus"
    },
    {
        "key": "cmd+shift+l",
        "command": "workbench.action.focusActivityBar",
        "when": "sideBarFocus"
    },
    {
        "key": "shift+k",
        "command": "workbench.action.increaseViewHeight",
        "when": "focusedView == 'outline'"
    },
    {
        "key": "j",
        "command": "editor.action.scrollDownHover",
        "when": "editorHoverFocused"
    },
    {
        "key": "k",
        "command": "editor.action.scrollUpHover",
        "when": "editorHoverFocused"
    },
    {
        "key": "cmd+shift+h",
        "command": "togglePeekWidgetFocus",
        "when": "inReferenceSearchEditor || referenceSearchVisible"
    },
    {
        "key": "cmd+shift+l",
        "command": "togglePeekWidgetFocus",
        "when": "inReferenceSearchEditor || referenceSearchVisible"
    },
    {
        "key": "a",
        "command": "git.stage",
        "when": "listFocus && sideBarFocus && activeViewlet == 'workbench.view.scm'"
    },
    {
        "key": "u",
        "command": "git.unstage",
        "when": "listFocus && sideBarFocus && activeViewlet == 'workbench.view.scm'"
    },
    {
        "key": "ctrl+l",
        "command": "list.collapseAll",
        "when": "listFocus && !inputFocus"
    },
    {
        "key": "cmd+shift+g",
        "command": "workbench.view.scm",
        "when": "workbench.scm.active"
    },
    {
        "key": "cmd+shift+t",
        "command": "workbench.action.terminal.focus",
        "when": "terminalHasBeenCreated"
    },
    {
        "key": "cmd+shift+0",
        "command": "workbench.action.openChat.copilot",
    }
    // {
    //     "key": "cmd+shift+w",
    //     "command": "workbench.action.terminal.focus",
    //     "when": "terminalHasBeenCreated"
    // },
]